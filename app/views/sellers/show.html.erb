<div class="text-center">
	<div class="row borders">
		<div class="col-md-6">
			<h1>Nazwa</h1>
			<h2><%= @seller.name %></h2>
		</div>
	
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-6">
				<h1>Adres</h1>
					<h2><%= @seller.address %></h2></div>
				<div class="col-md-6">
					<h1>Kod pocztowy</h1>
					<h2><%= @seller.postcode %></h2>
				</div>
				<div class="col-md-12">		
					<h1>Miejscowość</h1>
					<h2><%= @seller.city %></h2>
				</div>
			</div>
		</div>
	</div>

	<div class="row borders">
		<div class="col-md-6">
			<h1>Nip</h1>
			<h2><%= @seller.nip %></h2>
		</div>
	
		<div class="col-md-6">
			<h1>Regon</h1>
			<h2><%= @seller.regon %></h2>
		</div>
	</div>
	<div class="row borders">
		<div class="col-md-6">
			<h1>Nazwa banku</h1>
			<h2><%= @seller.bank_name %></h2>
		</div>
	
		<div class="col-md-6">
			<h1>Numer konta</h1>
			<h2><%= @seller.account_number %></h2>
		</div>
	</div>

	<h1 class="col-md-6 text-right"><%= link_to 'Edycja', edit_seller_path(@seller) %></h1>
	<h1 class="col-md-6 text-left"><%= link_to 'Wstecz', sellers_path %></h1>
</div>
