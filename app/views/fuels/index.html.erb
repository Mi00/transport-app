<div class="row">
	<div class="col-md-12">
		<table class="table table-hover col-md-12">
			<tr>
				<th>Lp.</th>
				<th>Nr rejestracyjny</th>
				<th>Ilość litrów</th>
				<th>Data tankowania</th>
				<th colspan="3"></th>				
			</tr>
			<% @fuels.each do |fuel| %>
			<tr>
				<td><%= fuel.id %></td>
				<td><%= find_carname(fuel.car_id) %></td>
				<td><%= fuel.liters %></td>
				<td><%= fuel.tank_date.strftime("%d-%m-%Y") %></td>
				<td><%= link_to 'Pokaż', fuel %></td>
		        <td><%= link_to 'Edycja', edit_fuel_path(fuel) %></td>
		        <td><%= link_to 'Usuń', fuel, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
<br>
<br>
<div class="row">
	<div class="col-md-12 text-center">
		<%= link_to "Nowe tankowanie", new_fuel_path %>
	</div>
</div>

