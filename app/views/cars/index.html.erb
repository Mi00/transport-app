<div class="row">
	<div class="col-md-12 text-center">
		<%= link_to "Nowy samochod", new_car_path, class: 'btn btn-success' %>
	</div>
</div>
<br>
<div class="row">
	<div class="col-md-12">
		<table class="table table-hover col-md-12">
			<tr>
				<th>Lp.</th>
				<th>Nr rejestracyjny</th>
				<th>Aktywne</th>
				<th colspan="3"></th>				
			</tr>
			<% @cars.each do |car| %>
			<tr class="<%= car.active ? 'good' : 'bad' %>">
				<td><%= car.id %></td>
				<td><%= car.car_number %></td>
				<td>
					<% if car.active == true %>
						<span class="glyphicon glyphicon-ok"></span>
					<% else %>
						<span class="glyphicon glyphicon-remove"></span>
					<% end %>
				</td>
				<td><%= link_to 'Pokaż', car %></td>
		        <td><%= link_to 'Edycja', edit_car_path(car) %></td>
		        <td><%= link_to 'Usuń', car, method: :delete, data: { confirm: 'Wraz z usunięciem auta zostaną skoasowane powiązane z nim rzeczy. Czy na pewno chcesz usunąć auto?' } %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>


