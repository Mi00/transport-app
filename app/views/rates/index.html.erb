<div class="row">
	<div class="col-md-12 text-center">
		<%= form_tag(rates_path, method: 'get') do %>
		<p>
			<%= label :search, "Nr auta" %>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag "Search", name: nil %>
		</p>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<table class="table table-hover col-md-12">
			<tr>
				<th>Lp.</th>
				<th>Auto</th>
				<th>Data</th>
				<th>Waluta</th>
				<th>Wartość w walucie</th>
				<th>Tabela</th>
				<th>Data tabeli</th>
				<th>Kurs</th>
				<th>Wartość w zł</th>
				<th>Opłata drogowa</th>
				<th>Wydrukowane?</th>	
    		    <th colspan="4"></th>
			</tr>
			<% @rates.each do |rate| %>
			<tr>
				<td><%= rate.id %></td>
				<td><%= find_carname(rate.car_id) %></td>
				<td><%= rate.date %></td>
				<td><%= rate.currency %></td>
				<td><%= rate.value_currency %></td>
				<td><%= rate.table %></td>
				<td><%= rate.table_date %></td>
				<td><%= rate.converter %></td>
				<td><%= rate.value_pln %></td>
				<td>
					<% if rate.payment == true %>
						<span class="glyphicon glyphicon-ok"></span>
					<% else %>
						<span class="glyphicon glyphicon-remove"></span>
					<% end %>					
				</td>
				<td><%= rate.printed %></td>				
				<td><%= link_to "Show", rate_path(rate.id) %></td>
				<td><%= link_to "PDF", rate_path(rate.id, format: :pdf) %></td>
				<td><%= link_to 'Edit', edit_rate_path(rate) %></td>
        		<td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
<br><br>
<div class="row">
	<div class="col-md-12 text-center">
		<%= link_to "Nowy dowod", new_rate_path, style: "font-size: 20px;" %>
	</div>
</div>

